{
  "name": "micro-frontend-demo",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "turbo": "^1.2.5",
    "prettier": "^2.8.1",
    "pretty-quick": "^3.1.3"
  },
  "scripts": {
    "dev": "npx turbo run dev",
    "build": "npx turbo run build",
    "start": "npx turbo run start",
    "lint": "npx turbo run lint",
    "pretty": "npx turbo run pretty"
  },
  "workspaces": [
    "app",
    "shared",
    "internal"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pretty",
      "pre-push": "npm test",
      "...": "..."
    }
  }
}
